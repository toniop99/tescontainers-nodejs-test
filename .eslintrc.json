{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "max-len": ["warn", {
            "code": 120,
            "ignoreUrls": true,
            "ignoreComments": true,
            "ignoreRegExpLiterals": true
        }]
    },
    "ignorePatterns": [
        "build",
        "node_modules"
    ]
}
